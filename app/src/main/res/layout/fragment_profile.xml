<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile_header"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <tk.therealsuji.vtopchennai.widgets.SettingsGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:category="@string/settings_personal">

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Messages" />

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Staff" />

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Switch semester" />

            </tk.therealsuji.vtopchennai.widgets.SettingsGroup>

            <tk.therealsuji.vtopchennai.widgets.SettingsGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:category="@string/settings_general">

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Notifications" />

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Theme" />

            </tk.therealsuji.vtopchennai.widgets.SettingsGroup>

            <tk.therealsuji.vtopchennai.widgets.SettingsGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:category="@string/settings_application">

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Privacy policy" />

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Share feedback" />

                <tk.therealsuji.vtopchennai.widgets.SettingsItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="View on GitHub" />

            </tk.therealsuji.vtopchennai.widgets.SettingsGroup>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>