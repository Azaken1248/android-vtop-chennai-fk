<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InfoCard">
        <attr name="key" format="string" />
        <attr name="value" format="string" />
    </declare-styleable>

    <declare-styleable name="TimetableItem">
        <attr name="course_code" format="string" />
        <attr name="course_type" format="enum">
            <enum name="theory" value="0" />
            <enum name="lab" value="1" />
        </attr>
        <attr name="end_time" format="string" />
        <attr name="start_time" format="string" />
    </declare-styleable>

    <declare-styleable name="TimetableLayout">
        <attr name="day" format="enum">
            <enum name="sunday" value="0" />
            <enum name="monday" value="1" />
            <enum name="tuesday" value="2" />
            <enum name="wednesday" value="3" />
            <enum name="thursday" value="4" />
            <enum name="friday" value="5" />
            <enum name="saturday" value="6" />
        </attr>
    </declare-styleable>
</resources>